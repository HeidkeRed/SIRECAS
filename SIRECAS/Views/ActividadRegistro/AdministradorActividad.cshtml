@model SIRECAS.Models.ViewModels.ActividadesPaginadasViewModel

@{
    ViewData["Title"] = "Registro de Actividades";
}

<style>
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        background-color: #f5f5f7;
        color: #1d1d1f;
        margin: 20px;
    }

    h2 {
        font-weight: 600;
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: #000;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 14px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    thead tr {
        background-color: #f0f0f5;
        border-bottom: 1px solid #d6d6db;
    }

    thead th {
        text-align: left;
        font-weight: 600;
        padding: 12px 20px;
        color: #3c3c4399;
        font-size: 0.95rem;
        user-select: none;
    }

    tbody tr {
        transition: background-color 0.3s ease;
    }

        tbody tr:hover {
            background-color: #f9f9fb;
        }

    tbody td {
        padding: 12px 20px;
        border-bottom: 1px solid #e4e4e9;
        font-size: 1rem;
        color: #1d1d1f;
    }

    tbody tr:last-child td {
        border-bottom: none;
    }

    .pagination {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        list-style: none;
        padding-left: 0;
    }

    .page-item {
        margin: 0 4px;
    }

    .page-link {
        padding: 8px 12px;
        color: #007bff;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.95rem;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
        cursor: default;
    }
</style>

<h2>📋 Registro de Actividades</h2>

<table>
    <thead>
        <tr>
            <th>🧑‍💼 Usuario</th>
            <th>📝 Actividad</th>
            <th>📅 Fecha</th>
            <th>⏰ Hora</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actividad in Model.Actividades)
        {
            <tr>
                <td>@actividad.NombreUsuario</td>
                <td>@actividad.Actividad</td>
                <td>@actividad.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@actividad.Hora</td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="EliminarTodas" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar todas las actividades? Esta acción no se puede deshacer.');">
    <button type="submit" style="
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 16px;
        border-radius: 6px;
        font-size: 0.95rem;
        cursor: pointer;
        margin-bottom: 15px;
    ">
        🗑️ Eliminar Todas las Actividades
    </button>
</form>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPaginas; i++)
        {
            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                <a class="page-link" href="@Url.Action("AdministradorActividad", "ActividadRegistro", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav>
