@model SIRECAS.Models.ViewModels.DatosHistoricoViewModel

@{
    ViewData["Title"] = "Agregar Dato Histórico";
}

<h2 class="mb-4">📘 Agregar Dato Histórico</h2>

<form asp-action="Registrar_DatosHistorico" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" placeholder="Ej. Sismo de 1985" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaEvento" class="form-label"></label>
        <input asp-for="FechaEvento" class="form-control" type="date" />
        <span asp-validation-for="FechaEvento" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="5" placeholder="Describe el evento histórico..."></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>

