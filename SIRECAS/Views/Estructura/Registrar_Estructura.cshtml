@model SIRECAS.Models.ViewModels.EstructuraViewModel

<h2>Registro de Estructura</h2>

<form asp-action="Registrar_Estructura" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="MuroPiedra" class="form-check-input" type="checkbox" />
        <label asp-for="MuroPiedra" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="MuroBlock" class="form-check-input" type="checkbox" />
        <label asp-for="MuroBlock" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="MuroLadrillo" class="form-check-input" type="checkbox" />
        <label asp-for="MuroLadrillo" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="MuroAdobe" class="form-check-input" type="checkbox" />
        <label asp-for="MuroAdobe" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="MuroBahareque" class="form-check-input" type="checkbox" />
        <label asp-for="MuroBahareque" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="OtroTipoMuro"></label>
        <input asp-for="OtroTipoMuro" class="form-control" />
    </div>

    <hr />

    <div class="form-check">
        <input asp-for="ColumnaConcreto" class="form-check-input" type="checkbox" />
        <label asp-for="ColumnaConcreto" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="ColumnaPiedra" class="form-check-input" type="checkbox" />
        <label asp-for="ColumnaPiedra" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="OtroTipoColumna"></label>
        <input asp-for="OtroTipoColumna" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Estructura</button>
</form>
