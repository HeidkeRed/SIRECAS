@model SIRECAS.Models.ViewModels.AcabadosPisoViewModel

<h2>Registro de Acabados del Piso</h2>

<form asp-action="Registrar_AcabadosPiso" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="Tierra" class="form-check-input" type="checkbox" />
        <label asp-for="Tierra" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Mosaico" class="form-check-input" type="checkbox" />
        <label asp-for="Mosaico" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="PisoCeramico" class="form-check-input" type="checkbox" />
        <label asp-for="PisoCeramico" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="ConcretoPulido" class="form-check-input" type="checkbox" />
        <label asp-for="ConcretoPulido" class="form-check-label"></label>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="OtrosAcabados"></label>
        <input asp-for="OtrosAcabados" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Acabados de Piso</button>
</form>

