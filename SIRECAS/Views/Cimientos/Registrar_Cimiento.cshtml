@model SIRECAS.Models.ViewModels.CimientosViewModel

<h2>Registro de Cimientoss</h2>

<form asp-action="Registrar_Cimientos" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="TierraCompactada" class="form-check-input" type="checkbox" />
        <label asp-for="TierraCompactada" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="MamposteriaPiedra" class="form-check-input" type="checkbox" />
        <label asp-for="MamposteriaPiedra" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="ZapatasAisladas" class="form-check-input" type="checkbox" />
        <label asp-for="ZapatasAisladas" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="ZapatasCorridas" class="form-check-input" type="checkbox" />
        <label asp-for="ZapatasCorridas" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="LosaCimentacion" class="form-check-input" type="checkbox" />
        <label asp-for="LosaCimentacion" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="OtrosCimientos"></label>
        <input asp-for="OtrosCimientos" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cimientoss</button>
</form>
