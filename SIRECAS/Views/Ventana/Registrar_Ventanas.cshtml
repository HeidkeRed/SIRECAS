@model SIRECAS.Models.ViewModels.VentanaViewModel

<h2>Registro de Ventanas</h2>

<form asp-action="Registrar_Ventanas" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="Madera" class="form-check-input" type="checkbox" />
        <label asp-for="Madera" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Herreria" class="form-check-input" type="checkbox" />
        <label asp-for="Herreria" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Aluminio" class="form-check-input" type="checkbox" />
        <label asp-for="Aluminio" class="form-check-label"></label>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="OtrosMateriales"></label>
        <input asp-for="OtrosMateriales" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Ventanas</button>
</form>
