@{
    var sesionActiva = Context.Session.GetInt32("IdUsuario") != null;
    var idRol = Context.Session.GetInt32("IdRol") ?? 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIRECAS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIRECAS.styles.css" asp-append-version="true" />
</head>
<body>
    @if (sesionActiva)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Inicio">SIRECAS</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (idRol == 1 || idRol == 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Identificacion" asp-action="Index">Registro</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Identificacion" asp-action="Lista_Identificaciones">Artesacros</a>
                            </li>

                            @if (idRol == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Registrar">Registrar Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="ListaUsuarios">Administrar Usuarios</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="CerrarSesion">Cerrar sesión</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (sesionActiva)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - SIRECAS - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
