@model SIRECAS.Models.ViewModels.CubiertaViewModel

<h2>Registro de Cubiertas</h2>

<form asp-action="Registrar_Cubierta" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="Lamina" class="form-check-input" type="checkbox" />
        <label asp-for="Lamina" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Concreto" class="form-check-input" type="checkbox" />
        <label asp-for="Concreto" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Boveda" class="form-check-input" type="checkbox" />
        <label asp-for="Boveda" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Cupula" class="form-check-input" type="checkbox" />
        <label asp-for="Cupula" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Palma" class="form-check-input" type="checkbox" />
        <label asp-for="Palma" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="LosaPlana" class="form-check-input" type="checkbox" />
        <label asp-for="LosaPlana" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="DosAguas" class="form-check-input" type="checkbox" />
        <label asp-for="DosAguas" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="TresCuatroAguas" class="form-check-input" type="checkbox" />
        <label asp-for="TresCuatroAguas" class="form-check-label"></label>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="OtrasCubiertas"></label>
        <input asp-for="OtrasCubiertas" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cubiertas</button>
</form>
