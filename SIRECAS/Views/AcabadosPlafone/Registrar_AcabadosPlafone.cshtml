@model SIRECAS.Models.ViewModels.AcabadosPlafoneViewModel

<h2>Registro de Acabados de Plafón</h2>

<form asp-action="Registrar_AcabadosPlafone" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="IdIdentificacion" />

    <div class="form-check">
        <input asp-for="AparenteSinAcabadoFinal" class="form-check-input" type="checkbox" />
        <label asp-for="AparenteSinAcabadoFinal" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="BaseCemento" class="form-check-input" type="checkbox" />
        <label asp-for="BaseCemento" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="BaseYeso" class="form-check-input" type="checkbox" />
        <label asp-for="BaseYeso" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="Pintura" class="form-check-input" type="checkbox" />
        <label asp-for="Pintura" class="form-check-label"></label>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="OtrosAcabados"></label>
        <input asp-for="OtrosAcabados" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observaciones"></label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar Acabados de Plafón</button>
</form>
